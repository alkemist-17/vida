
var rand = load("rand")

var swap = fun xs, i, j {
    var aux = xs[i]
    xs[i] = xs[j]
    xs[j] = aux
}

var shuffle = fun xs {
    var N = len(xs)
    var r = nil
    for i = 0, N {
        r = rand.nextI(i + 1)
        swap(xs, i, r)
    }
    ret xs
}

var generateList = fun N {
    var xs = list(N)
    for i = 0, N {
        xs[i] = i
    }
    ret xs
}

var N = 10_000_000
var xs = generateList(N)

var r = shuffle(xs)
assert(r != nil)

var alpha = "abcdefghiklmopqrstuvwxyz"

for in 10 {
    var r = rand.shuffled(alpha) 
    print(r)
    assert(len(r)==len(alpha))
}

for in 10 {
    print(format("%032b", rand.nextU32()))
}
